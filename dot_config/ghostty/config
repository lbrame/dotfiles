# Ghostty configuration file

# Theme
theme = rose-pine
window-theme = ghostty

# Fonts
bold-is-bright = true

# Cursor
cursor-style = block

# Padding
window-padding-x = 2,4
window-padding-y = 2,4
window-padding-balance = true

# New window behaviour
window-inherit-working-directory = true
window-inherit-font-size = true

# Set shell integration
shell-integration-features = sudo

# Set auto update
auto-update = check

# Custom keybindings
keybind = ctrl+shift+h=toggle_window_decorations
keybind = ctrl+shift+left=resize_split:left,5
keybind = ctrl+shift+right=resize_split:right,5
keybind = ctrl+shift+up=resize_split:up,5
keybind = ctrl+shift+down=resize_split:down,5
keybind = ctrl+shift+0=equalize_splits
keybind = ctrl+shift+s=new_split:auto
keybind = ctrl+shift+s=new_split:auto
keybind = f11=toggle_fullscreen



